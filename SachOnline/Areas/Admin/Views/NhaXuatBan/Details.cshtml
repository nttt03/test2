@model SachOnline.Models.NHAXUATBAN
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }
</style>

<h2 style="text-align:center">CHI TIẾT NHÀ XUẤT BẢN</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã nhà xuất bản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaNXB)
        </dd>
        <dt>
            Tên nhà xuất bản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenNXB)
        </dd>
        <dt>
            Điện thoại:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>
        <dt>
            Địa chỉ:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        
    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaNXB }) |
    @Html.ActionLink("VỀ TRANG QUẢN LÝ NHÀ XUẤT BẢN", "Index")
</p>
