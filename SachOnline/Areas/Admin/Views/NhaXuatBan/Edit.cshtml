@model SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN NHÀ XUẤT BẢN</h2>

@using (Html.BeginForm("Edit", "NhaXuatBan", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã nhà xuất bản:</label>
            <div class="col-md-10">
                @*Chỉ hiển thị mã chủ đề không cho sửa*@
                <input type="text" size="70" name="iMaNXB" value="@Model.MaNXB" readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên nhà xuất bản:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenNXB" value="@Model.TenNXB" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Điện thoại:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDienThoai" value="@Model.DienThoai" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDiaChi" value="@Model.DiaChi" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ NHÀ XUẤT BẢN", "Index")
</div>