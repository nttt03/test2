@model SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>THÊM CHỦ ĐỀ</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("Create", "ChuDe", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên chủ đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenCD" value="@ViewBag.TenCD"
                       required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ CHỦ ĐỀ", "Index")
</div>