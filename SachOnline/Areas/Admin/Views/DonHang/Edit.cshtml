@model SachOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN ĐẶT HÀNG</h2>

@using (Html.BeginForm("Edit", "DonHang", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã đơn hàng:</label>
            <div class="col-md-10">
                @*Chỉ hiển thị mã chủ đề không cho sửa*@
                <input type="text" size="70" name="iMaDH" value="@Model.MaDonHang" readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Đã thanh toán:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="BThanhToan" value="@Model.DaThanhToan" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tình trạng giao:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTinhTrang" value="@Model.TinhTrangGiaoHang" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ngày đặt:</label>
            <div class="col-md-10">
                <input type="date" size="70" name="sDiaChi" value="@Model.NgayDat" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ngày giao:</label>
            <div class="col-md-10">
                <input type="date" size="70" name="sDiaChi" value="@Model.NgayGiao" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ NHÀ XUẤT BẢN", "Index")
</div>